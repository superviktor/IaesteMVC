    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</head>
    <body>
        <div class="header">
            @*logo*@
            <div id="logo">
                <img src="~/Content/Images/Logo-IAESTE-white-transparent-background1.png" height="200" />
                <p id="logoText">Ukraine</p>
            </div>

            @*splitter*@
            <div class="splitter">
