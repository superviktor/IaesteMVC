            @*navigation*@
            <div class="navDiv">
                <label for="show-menu" class="show-menu">Show Menu</label>
                <input type="checkbox" id="show-menu" role="button" />
                <ul id="menu">
                    <li class="current"><a href="">Головна</a></li>
                    <li><a href="#">Вимоги</a></li>
                    <li>
                        <a href="#">Конференція</a>
                        <ul class="hidden">
                            <li><a href="#">2015</a></li>
                            <li><a href="#">2016</a></li>
                        </ul>
                    </li>
                    <li><a href="#">Інтернаціоналізація освіти</a></li>
                    <li><a href="#">Сучасна математика для інженерів</a></li>
                    <li><a href="#">Офери</a></li>
                </ul>
            </div>

            @*splitter*@
            <div class="splitter">
            </div>

        </div>

        @RenderBody()

        @*splitter*@
        <div class="splitter">
        </div>

        <div class="footer"></div>
       
    </body>
</html>
